{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/ui/*": [
        "./src/components/ui/*",
        "./components/ported/ui/*",
        "./components/ui/*"
      ],
      "@/components/admin/*": [
        "./components/admin/*",
        "./components/ported/admin/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*",
        "./components/ported/hooks/*"
      ],
      "@/types/*": [
        "./components/ported/types/*"
      ],
      "@/lib/*": [
        "./src/lib/*",
        "./lib/*",
        "./components/ported/lib/*"
      ],
      "@/calendar/*": [
        "./src/calendar/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bizcraft-app-suite-main 3/**",
    "components/ported/admin/AdminLayout.tsx",
    "components/ported/LanguageToggle.tsx",
    "components/ported/PageTransition.tsx"
  ]
}
